<Window x:Class="SneackApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SneackApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="480" Width="640">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="100*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal"  Background="#FF9448D4" FlowDirection="RightToLeft">
            <Button Content="Knopka" Style="{StaticResource MyBtnStl}" Click="Button_Click"/>
        </StackPanel>
        <Frame Grid.Row="1" Name="MainWFrame" Background="White" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
