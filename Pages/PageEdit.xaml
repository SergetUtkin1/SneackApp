<Page x:Class="SneackApp.Pages.PageEdit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SneackApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageEdit">

    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="ФИО:" Style="{StaticResource MyTBlockStl}"/>
                <TextBox x:Name="FioTB" Style="{StaticResource MyTextBoxStl}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Пол:" Style="{StaticResource MyTBlockStl}"/>
                <ComboBox x:Name="SexCB" Style="{StaticResource  MyComboBoxStl}"/>
            </StackPanel>

            <Button x:Name="BtnSave" Click="BtnSave_Click" Content="Сохранить" Style="{StaticResource MyBtnStl}"/>
        </StackPanel>
    </Grid>
</Page>
