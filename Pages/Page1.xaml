<Page x:Class="SneackApp.Pages.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SneackApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Grid Background="#FFECD2D2">
        <StackPanel Orientation="Horizontal"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <StackPanel Orientation="Vertical">
                <Button Content="Добавить шкилу" Style="{StaticResource MyBtnStl}"/>
                <Button Content="кросы шкил" Style="{StaticResource MyBtnStl}"/>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <Button Content="Добавить кроссы" Style="{StaticResource MyBtnStl}"/>
                <Button x:Name="CheckDbBtn" Content="Юзлесс батон" Style="{StaticResource MyBtnStl}" Click="CheckDbBtn_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
